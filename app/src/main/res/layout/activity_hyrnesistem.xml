<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

   >
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"

    android:id="@+id/linearLayout"
    android:layout_centerVertical="true"
    android:layout_centerHorizontal="true">

<EditText
        android:id="@+id/inp_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="E-mail"
    android:layout_marginBottom="15dp"

        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/inp_pass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Fjalekalim"


        android:inputType="textPassword" />


    <TextView
        android:id="@+id/lblMsg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Keni harruar fjalekalimin?"
        android:textColor="#cc0000"
        android:gravity="right"
        android:textSize="10dp"
        android:layout_marginBottom="160dp"/>

    <Button
        android:id="@+id/inp_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hyr ne sistem"
        android:background="#cc0000"
        android:textColor="#ffffff"
        android:layout_marginBottom="10dp"
       />

    <Button
        android:id="@+id/inp_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Regjistrohu"
        android:textColor="#ffffff"
        android:background="#e0e0eb"
        />

</LinearLayout>

</RelativeLayout>
